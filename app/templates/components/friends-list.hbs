<div class="flex flex-col justify-between text-center w-1/6 h-full">
    <h4 class="text-xl py-2 border-b-2 border-blue-700 h-1/8">contacts</h4>
    <ul class="h-5/6 bg-blue-600">
{{#each @model.friends as |friend|}}
<li>
    <div class="py-2 border-b-1 border-blue-700 shadow-sm ">
        {{friend.name}}
    </div>
</li>

{{/each}}
    </ul>
    <div class="flex flex-col justify-center items-center">
        <button class="py-2 bg-green-200 px-2 shadow rounded-lg" {{on "click" toggleFriendFrame}}>Add friend</button>
    </div>
    
</div>
{{#if this.showAddFriend}}
<div class="bg-gray-500 bg-opacity-50 h-screen w-full absolute top-0 left-0 z-10 flex justify-center items-center">
    <div class="bg-gray-300 w-2/3 h-2/3 rounded">
    <button class="border py-2 px-4 border-blue-700 rounded" {{on "click" toggleFriendFrame}}>cancel</button>
    </div>
</div>
{{/if}}
